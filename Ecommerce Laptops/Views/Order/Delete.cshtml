@model Ecommerce_Laptops.Models.OrderModel

@{
    ViewData["Title"] = "Delete";
    var laptop = ViewData["laptop"] as LaptopModel;
}


<h3 class="text-danger">Are you sure you want to delete this order?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => laptop.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => laptop.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => laptop.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => laptop.Price)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Order_ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to Orders page</a>
    </form>
</div>
